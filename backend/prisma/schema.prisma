// Schema Prisma - LMS 2025
// Clerk Authentication + Video Progress Tracking + Messages (Phase 15)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
// AUTHENTICATION (Clerk)
// ========================================

enum UserRole {
  STUDENT
  ADMIN
  INSTRUCTOR
}

model User {
  id               String   @id @default(uuid())
  clerkId          String   @unique
  name             String
  email            String?  @unique
  emailVerified    Boolean  @default(false)
  image            String?
  role             UserRole @default(STUDENT)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  avatarUrl String?
  avatarKey String?

  banned           Boolean?
  banReason        String?
  banExpires       DateTime?
  stripeCustomerId String?  @unique

  // üÜï Profile enrichi (Phase 16)
  bio              String?           @db.Text
  profession       String?
  dateOfBirth      DateTime?
  lastLoginAt      DateTime?

  // Relations - Courses & Enrollments
  coursesCreated Course[]         @relation("CourseCreator")
  enrollments    Enrollment[]
  lessonProgress LessonProgress[]
  videoProgress  VideoProgress[]

  // Relations - Messages (Phase 15)
  conversationsAsInstructor Conversation[] @relation("ConversationAsInstructor")
  conversationsAsStudent    Conversation[] @relation("ConversationAsStudent")
  sentMessages              Message[]

  // üÜï Relations - Preferences (Phase 16)
  preferences      UserPreferences?  @relation("UserPreferences")

  // üñºÔ∏è AVATAR REFACTOR (Phase 20)
  /// Foreign key to MediaAsset.id for user's avatar
  avatarMediaId String?

  /// Relation to MediaAsset
  avatar MediaAsset? @relation("UserAvatar", fields: [avatarMediaId], references: [id], onDelete: SetNull)

  /// All images uploaded by this user
  uploads MediaAsset[] @relation("MediaUploadedBy")

  @@map("user")
}

// ========================================
// USER PREFERENCES (NEW - Phase 16)
// ========================================

model UserPreferences {
  id                    String    @id @default(uuid())
  userId                String    @unique
  user                  User      @relation("UserPreferences", fields: [userId], references: [id], onDelete: Cascade)

  // Notifications
  emailNotifications    Boolean   @default(true)
  courseUpdates         Boolean   @default(true)
  weeklyDigest          Boolean   @default(false)
  marketingEmails       Boolean   @default(false)

  // Video preferences
  videoQuality          String    @default("auto")
  autoplay              Boolean   @default(true)
  subtitles             Boolean   @default(false)

  // Localization
  language              String    @default("fr")
  timezone              String    @default("Europe/Paris")

  // UI Preferences
  theme                 String    @default("auto")

  // Timestamps
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("user_preferences")
}

// ========================================
// COURSES & CONTENT
// ========================================

enum CourseLevel {
  Beginner
  Intermediate
  Advanced
}

enum CourseStatus {
  Draft
  Published
  Archived
}

model Course {
  id               String @id @default(uuid())
  title            String
  slug             String @unique
  description      String @db.Text
  smallDescription String

  // Tiptap rich content
  requirements String? @db.Text
  outcomes     String? @db.Text

  // Media
  imageUrl String?
  fileKey  String?

  // Pricing
  price         Float
  stripePriceId String? @unique

  // Organization
  category String
  level    CourseLevel  @default(Beginner)
  status   CourseStatus @default(Draft)
  duration Int?

  // Metadata
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  // Relations
  userId    String
  createdBy User   @relation("CourseCreator", fields: [userId], references: [id], onDelete: Cascade)

  lessonProgress LessonProgress[]
  chapters       Chapter[]
  enrollments    Enrollment[]
  conversations  Conversation[]  // Phase 15: Messages optionnel par cours

  // üé® Cover image (Phase 20)
  /// Foreign key to MediaAsset for course cover image
  imageMediaId String?

  /// Relation to MediaAsset - access cover image data
  image MediaAsset? @relation("CourseImage", fields: [imageMediaId], references: [id], onDelete: SetNull)

  @@index([slug])
  @@index([status])
  @@index([userId])
  @@index([category])
  @@index([level])
}

model Chapter {
  id        String   @id @default(uuid())
  title     String
  position  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  lessons Lesson[]

  @@index([courseId])
  @@index([position])
}

model Lesson {
  id               String   @id @default(cuid())
  title            String
  description      String?
  content          String?  @db.Text
  isPublished      Boolean  @default(false)

  // Video fields
  videoUrl         String?
  videoKey         String?
  externalVideoUrl String?
  thumbnailKey     String?
  duration         Int?     // Dur√©e en secondes

  order            Int
  isFree           Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  chapterId String
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  attachments    LessonAttachment[]
  lessonProgress LessonProgress[]
  videoProgress  VideoProgress[]

  // üñºÔ∏è Lesson image (Phase 20)
  /// Foreign key to MediaAsset for lesson illustration/thumbnail
  imageMediaId String?

  /// Relation to MediaAsset
  image MediaAsset? @relation("LessonImage", fields: [imageMediaId], references: [id], onDelete: SetNull)

  @@index([chapterId])
}

model LessonAttachment {
  id       String @id @default(cuid())
  lessonId String
  lesson   Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  fileName String
  fileUrl  String
  fileSize Int    // Taille en bytes
  fileType String // MIME type (application/pdf, etc.)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([lessonId])
}

// ========================================
// PROGRESS TRACKING
// ========================================

// Progression g√©n√©rale d'une le√ßon (compl√©tion officielle)
model LessonProgress {
  id          String    @id @default(cuid())
  userId      String
  lessonId    String
  courseId    String
  completed   Boolean   @default(false)
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@index([userId, courseId])
}

// ========================================
// ENROLLMENTS
// ========================================

enum EnrollmentStatus {
  Pending
  Active
  Cancelled
}

model Enrollment {
  id        String           @id @default(uuid())
  amount    Float
  status    EnrollmentStatus @default(Pending)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId], name: "userId_courseId")
  @@index([userId])
  @@index([courseId])
  @@index([status])
}

model VideoProgress {
  id              String   @id @default(cuid())

  // Relations
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  lessonId        String
  lesson          Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  // Donn√©es de progression vid√©o
  currentTime     Float    @default(0)    // Position actuelle en secondes
  duration        Float    @default(0)    // Dur√©e totale de la vid√©o en secondes
  progressPercent Float    @default(0)    // Pourcentage calcul√© (0-100)

  // Tracking de compl√©tion vid√©o
  isCompleted     Boolean  @default(false) // true quand >= 90%
  completedAt     DateTime?

  // Derni√®re activit√©
  lastWatchedAt   DateTime @default(now()) // Mise √† jour √† chaque sauvegarde

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Contraintes et index
  @@unique([userId, lessonId])  // Un user = une seule progression par le√ßon
  @@index([userId])
  @@index([lessonId])
  @@index([lastWatchedAt])      // Pour trier par "r√©cemment regard√©"
  @@map("video_progress")
}

// ========================================
// MESSAGES & CONVERSATIONS (NEW - Phase 15)
// ========================================

enum MessageStatus {
  SENT      // Message envoy√©
  DELIVERED // Message re√ßu (pour futur impl√©mentation)
  READ      // Message lu par le destinataire
}

model Conversation {
  id String @id @default(cuid())
  instructorId String
  studentId String
  courseId String?

  // üÜï Corriger les noms des relations pour correspondre √† User
  instructor User @relation("ConversationAsInstructor", fields: [instructorId], references: [id], onDelete: Cascade)
  student User @relation("ConversationAsStudent", fields: [studentId], references: [id], onDelete: Cascade)
  course Course? @relation(fields: [courseId], references: [id], onDelete: SetNull)

  messages Message[]

  lastMessageAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([instructorId, studentId, courseId])
}

model Message {
  id              String   @id @default(cuid())

  // Content
  content         String   @db.Text  // Texte du message (max 5000 chars c√¥t√© service)

  // Sender
  senderId        String
  sender          User     @relation(fields: [senderId], references: [id], onDelete: Cascade)

  // Conversation
  conversationId  String
  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  // Read Status: SENT ‚Üí DELIVERED ‚Üí READ
  status          MessageStatus @default(SENT)
  readAt          DateTime?  // NULL = non lu, DateTime = timestamp de lecture

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Indexes pour requ√™tes fr√©quentes
  @@index([conversationId])    // Charger tous les messages d'une conversation
  @@index([senderId])          // Trouvez les messages d'un utilisateur
  @@index([createdAt])         // Trier les messages chronologiquement
  @@index([status])            // Compter les messages non-lus rapidement

  @@map("message")
}

// ============================================================================
// MediaLibrary System (Phase 18)
// ============================================================================
// Centralized image/media asset management with deduplication, multiple
// resolutions, and soft deletion for cost optimization on S3/Tigris.
// ============================================================================

model MediaAsset {
  // üÜî PRIMARY IDENTIFIERS
  id String @id @default(cuid())

  /// S3 composite key - UNIQUE to prevent duplicates
  /// Format: "{hash}/{uploadedById}" to organize by user in S3
  key String @unique

  // üìù FILE METADATA
  /// Original filename as uploaded by user
  filename String

  /// MIME type for validation + proper serving
  mimeType String

  /// File size in bytes
  size Int

  /// Original image dimensions (before resizing)
  width Int
  height Int

  // üîê DEDUPLICATION HASH
  /// SHA-256 hash of original file binary
  fileHash String @unique

  /// Reference count - how many MediaAssets point to same S3 files?
  refCount Int @default(1)

  // üñºÔ∏è S3 URLS - MULTIPLE RESOLUTIONS
  /// Full resolution URL (up to 2000√ó2000px)
  urlOriginal String

  /// Large resolution (1200√ó1200px, WebP)
  urlLarge String

  /// Medium resolution (500√ó500px, WebP)
  urlMedium String

  /// Thumbnail (150√ó150px, WebP)
  urlThumbnail String

  // üìä METADATA & ORGANIZATION
  /// User-provided description for SEO + accessibility
  description String?

  /// Array of tags for categorization + searching
  tags String[] @default([])

  // üë§ OWNERSHIP & PERMISSIONS
  /// User ID of who uploaded this asset
  uploadedById String
  uploadedBy User @relation("MediaUploadedBy", fields: [uploadedById], references: [id], onDelete: Cascade)

  /// Is this image shareable with other instructors?
  isPublic Boolean @default(false)

  // üóëÔ∏è SOFT DELETE & LIFECYCLE
  /// Soft delete flag
  isDeleted Boolean @default(false)

  /// When was this asset soft-deleted?
  deletedAt DateTime?

  /// Has this asset been physically removed from S3?
  purgedFromS3 Boolean @default(false)

  // üìà ANALYTICS & USAGE TRACKING
  /// How many times has this image been used?
  usageCount Int @default(0)

  /// Last timestamp this image was actively used
  lastUsedAt DateTime?

  // ‚è∞ AUDIT TRAIL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // üîó RELATIONS - WHERE IS THIS IMAGE USED?
  /// User avatars using this image
  usedByAvatars User[] @relation("UserAvatar")

  /// Course cover images using this asset
  courses Course[] @relation("CourseImage")

  /// Lesson thumbnail/illustration images
  lessons Lesson[] @relation("LessonImage")

  // üîç DATABASE INDEXES FOR PERFORMANCE
  @@index([uploadedById])
  @@index([isPublic])
  @@index([isDeleted])
  @@index([createdAt])
  @@index([usageCount])
  @@index([deletedAt])
  @@index([fileHash])
}
