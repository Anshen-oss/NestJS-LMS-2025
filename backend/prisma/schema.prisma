// Schema Prisma Hybride - LMS 2025
// Combine Better-Auth + Features avancées + Tracking progression

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
// AUTHENTICATION (Better-Auth)
// ========================================

enum UserRole {
  USER
  ADMIN
}

model User {
  id               String    @id
  name             String
  email            String    @unique
  emailVerified    Boolean
  image            String?
  role             UserRole  @default(USER) // ✨ Changé de String? à enum
  createdAt        DateTime
  updatedAt        DateTime

  // Moderation
  banned           Boolean?
  banReason        String?
  banExpires       DateTime?

  // Stripe
  stripeCustomerId String?   @unique

  // Relations Better-Auth
  sessions         Session[]
  accounts         Account[]

  // Relations LMS
  coursesCreated   Course[]       @relation("CourseCreator")
  enrollments      Enrollment[]
  lessonProgress   LessonProgress[] // ✨ AJOUT: Tracking progression

  @@map("user")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String   @unique
  createdAt      DateTime
  updatedAt      DateTime
  ipAddress      String?
  userAgent      String?
  impersonatedBy String?

  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

// ========================================
// COURSES & CONTENT
// ========================================

enum CourseLevel {
  Beginner
  Intermediate
  Advanced
}

enum CourseStatus {
  Draft
  Published
  Archived
}

model Course {
  id               String       @id @default(uuid())
  title            String
  slug             String       @unique
  description      String       @db.Text
  smallDescription String       // ✨ Description courte pour cards

  // Media
  imageUrl         String?      // ✨ AJOUT: Image de couverture
  fileKey          String?      // S3 key pour fichiers additionnels

  // Pricing
  price            Float        // ✨ Changé de Int à Float (49.99€)
  stripePriceId    String?      @unique

  // Organization
  category         String
  level            CourseLevel  @default(Beginner)
  status           CourseStatus @default(Draft)
  duration         Int?         // Durée totale en minutes

  // Metadata
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  // Relations
  userId           String
  createdBy        User         @relation("CourseCreator", fields: [userId], references: [id], onDelete: Cascade)

  chapters         Chapter[]
  enrollments      Enrollment[]

  @@index([slug])
  @@index([status])
  @@index([userId])
  @@index([category])
}

model Chapter {
  id        String   @id @default(uuid())
  title     String
  position  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  lessons   Lesson[]

  @@index([courseId])
  @@index([position])
}

model Lesson {
  id           String   @id @default(uuid())
  title        String
  description  String?  @db.Text
  position     Int

  // Media
  thumbnailKey String?  // S3 key thumbnail
  videoKey     String?  // S3 key video
  videoUrl     String?  // ✨ AJOUT: URL directe (alternative à videoKey)

  // Properties
  duration     Int?     // ✨ AJOUT: Durée en secondes
  isFree       Boolean  @default(false) // ✨ AJOUT: Preview gratuit

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  chapterId    String
  chapter      Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  lessonProgress LessonProgress[] // ✨ AJOUT: Tracking

  @@index([chapterId])
  @@index([position])
}

// ========================================
// ENROLLMENTS & PROGRESS
// ========================================

enum EnrollmentStatus {
  Pending   // Payment en cours
  Active    // Inscrit et payé
  Cancelled // Annulé/Remboursé
}

model Enrollment {
  id        String           @id @default(uuid())
  amount    Float            // ✨ Changé de Int à Float
  status    EnrollmentStatus @default(Pending)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  courseId  String
  course    Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)

  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId], name: "userId_courseId")
  @@index([userId])
  @@index([courseId])
  @@index([status])
}

// ✨ NOUVEAU MODEL: Tracking progression des leçons
model LessonProgress {
  id          String    @id @default(uuid())
  isCompleted Boolean   @default(false)
  completedAt DateTime?

  // Optionnel: tracking avancé
  watchedDuration Int?     // Secondes regardées
  lastWatchedAt   DateTime?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  lessonId    String
  lesson      Lesson    @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@index([userId])
  @@index([lessonId])
  @@index([isCompleted])
}
