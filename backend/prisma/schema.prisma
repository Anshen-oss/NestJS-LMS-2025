// Schema Prisma - LMS 2025
// Clerk Authentication + Video Progress Tracking + Messages (Phase 15)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
// AUTHENTICATION (Clerk)
// ========================================

enum UserRole {
  STUDENT
  ADMIN
  INSTRUCTOR
}

model User {
  id               String   @id @default(uuid())
  clerkId          String   @unique
  name             String
  email            String?  @unique
  emailVerified    Boolean  @default(false)
  image            String?
  role             UserRole @default(STUDENT)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  banned           Boolean?
  banReason        String?
  banExpires       DateTime?
  stripeCustomerId String?  @unique

  // Relations - Courses & Enrollments
  coursesCreated Course[]         @relation("CourseCreator")
  enrollments    Enrollment[]
  lessonProgress LessonProgress[]
  videoProgress  VideoProgress[]

  // Relations - Messages (Phase 15)
  conversationsAsInstructor Conversation[] @relation("ConversationAsInstructor")
  conversationsAsStudent    Conversation[] @relation("ConversationAsStudent")
  sentMessages              Message[]

  @@map("user")
}

// ========================================
// COURSES & CONTENT
// ========================================

enum CourseLevel {
  Beginner
  Intermediate
  Advanced
}

enum CourseStatus {
  Draft
  Published
  Archived
}

model Course {
  id               String @id @default(uuid())
  title            String
  slug             String @unique
  description      String @db.Text
  smallDescription String

  // Tiptap rich content
  requirements String? @db.Text
  outcomes     String? @db.Text

  // Media
  imageUrl String?
  fileKey  String?

  // Pricing
  price         Float
  stripePriceId String? @unique

  // Organization
  category String
  level    CourseLevel  @default(Beginner)
  status   CourseStatus @default(Draft)
  duration Int?

  // Metadata
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  // Relations
  userId    String
  createdBy User   @relation("CourseCreator", fields: [userId], references: [id], onDelete: Cascade)

  lessonProgress LessonProgress[]
  chapters       Chapter[]
  enrollments    Enrollment[]
  conversations  Conversation[]  // Phase 15: Messages optionnel par cours

  @@index([slug])
  @@index([status])
  @@index([userId])
  @@index([category])
  @@index([level])
}

model Chapter {
  id        String   @id @default(uuid())
  title     String
  position  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  lessons Lesson[]

  @@index([courseId])
  @@index([position])
}

model Lesson {
  id               String   @id @default(cuid())
  title            String
  description      String?
  content          String?  @db.Text
  isPublished      Boolean  @default(false)

  // Video fields
  videoUrl         String?
  videoKey         String?
  externalVideoUrl String?
  thumbnailKey     String?
  duration         Int?     // Durée en secondes

  order            Int
  isFree           Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  chapterId String
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  attachments    LessonAttachment[]
  lessonProgress LessonProgress[]
  videoProgress  VideoProgress[]

  @@index([chapterId])
}

model LessonAttachment {
  id       String @id @default(cuid())
  lessonId String
  lesson   Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  fileName String
  fileUrl  String
  fileSize Int    // Taille en bytes
  fileType String // MIME type (application/pdf, etc.)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([lessonId])
}

// ========================================
// PROGRESS TRACKING
// ========================================

// Progression générale d'une leçon (complétion officielle)
model LessonProgress {
  id          String    @id @default(cuid())
  userId      String
  lessonId    String
  courseId    String
  completed   Boolean   @default(false)
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@index([userId, courseId])
}

// ========================================
// ENROLLMENTS
// ========================================

enum EnrollmentStatus {
  Pending
  Active
  Cancelled
}

model Enrollment {
  id        String           @id @default(uuid())
  amount    Float
  status    EnrollmentStatus @default(Pending)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId], name: "userId_courseId")
  @@index([userId])
  @@index([courseId])
  @@index([status])
}

model VideoProgress {
  id              String   @id @default(cuid())

  // Relations
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  lessonId        String
  lesson          Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  // Données de progression vidéo
  currentTime     Float    @default(0)    // Position actuelle en secondes
  duration        Float    @default(0)    // Durée totale de la vidéo en secondes
  progressPercent Float    @default(0)    // Pourcentage calculé (0-100)

  // Tracking de complétion vidéo
  isCompleted     Boolean  @default(false) // true quand >= 90%
  completedAt     DateTime?

  // Dernière activité
  lastWatchedAt   DateTime @default(now()) // Mise à jour à chaque sauvegarde

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Contraintes et index
  @@unique([userId, lessonId])  // Un user = une seule progression par leçon
  @@index([userId])
  @@index([lessonId])
  @@index([lastWatchedAt])      // Pour trier par "récemment regardé"
  @@map("video_progress")
}

// ========================================
// MESSAGES & CONVERSATIONS (NEW - Phase 15)
// ========================================

enum MessageStatus {
  SENT      // Message envoyé
  DELIVERED // Message reçu (pour futur implémentation)
  READ      // Message lu par le destinataire
}

model Conversation {
  id              String   @id @default(uuid())

  // Participants (1-to-1: Instructor ↔ Student)
  instructorId    String
  instructor      User     @relation("ConversationAsInstructor", fields: [instructorId], references: [id], onDelete: Cascade)

  studentId       String
  student         User     @relation("ConversationAsStudent", fields: [studentId], references: [id], onDelete: Cascade)

  // Optional Course Context
  // Si courseId = NULL → Conversation générale (pas liée à un cours)
  // Si courseId = UUID → Conversation spécifique à ce cours
  courseId        String?
  course          Course?  @relation(fields: [courseId], references: [id], onDelete: SetNull)

  // Metadata pour optimisation
  lastMessageAt   DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  messages        Message[]

  // Constraints:
  // ✅ Une et UNE SEULE conversation par triplet (instructor, student, course)
  // ✅ Si courseId = NULL, c'est une conversation générale
 @@unique([instructorId, studentId])  // ✅ Enlever courseId

  // Indexes pour requêtes fréquentes
  @@index([instructorId])
  @@index([studentId])
  @@index([courseId])
  @@index([lastMessageAt])  // Pour trier "discussions récentes d'abord"

  @@map("conversation")
}

model Message {
  id              String   @id @default(cuid())

  // Content
  content         String   @db.Text  // Texte du message (max 5000 chars côté service)

  // Sender
  senderId        String
  sender          User     @relation(fields: [senderId], references: [id], onDelete: Cascade)

  // Conversation
  conversationId  String
  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  // Read Status: SENT → DELIVERED → READ
  status          MessageStatus @default(SENT)
  readAt          DateTime?  // NULL = non lu, DateTime = timestamp de lecture

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Indexes pour requêtes fréquentes
  @@index([conversationId])    // Charger tous les messages d'une conversation
  @@index([senderId])          // Trouvez les messages d'un utilisateur
  @@index([createdAt])         // Trier les messages chronologiquement
  @@index([status])            // Compter les messages non-lus rapidement

  @@map("message")
}
